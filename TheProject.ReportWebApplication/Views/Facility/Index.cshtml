@model TheProject.ReportWebApplication.Models.Facility

@{
    ViewBag.Title = "Facility Report";
}

@using (Html.BeginForm("Index", "Facility", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Client Code</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.ClientCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ClientCode, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8">
            <input type="submit" formtarget="_blank" value="Download" class="btn btn-default" style="float: right; margin-top: -35px;" />
        </div>
    </div>
</div>
}

